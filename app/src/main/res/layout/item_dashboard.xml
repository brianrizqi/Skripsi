<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:src="@mipmap/morning" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/card"
        android:fontFamily="@font/source_semi"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        tools:text="Judul" />

    <TextView
        android:id="@+id/txtArticleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtArticleTitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/card"
        android:fontFamily="@font/source_reg"
        tools:text="20 Desember 2019" />
</RelativeLayout>